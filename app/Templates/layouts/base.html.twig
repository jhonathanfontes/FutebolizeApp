<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		<title>{{ titulo ?? 'Sem Título' }}</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

		{# CSS crítico injetado inline #}
		{{ assets.inlineCss(module, company.slug ?? null) | raw }}

		{# CSS: Global do sistema #}
		{{ assets.globalCss() | raw }}

		{# CSS: Específico do módulo (Dev/Prod) #}
		{{ assets.devModuleCss(module) | raw }}
		{{ assets.moduleCss(module) | raw }}

		{# CSS: Tema da empresa (se aplicável) #}
		{{ assets.themeCss(company.slug ?? null) | raw }}
	</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">
                <a href="{{ base_url('/') }}">Logo</a>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="{{ base_url('configuracao/usuarios') }}">Usuários</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="{{ base_url('pessoas') }}">Pessoas</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="{{ base_url('empresas') }}">Empresas</a>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            {% if usuario %}
                                <li class="nav-item">
                                    <span class="nav-link">Olá, {{ usuario.nome ?? 'Usuário' }}</span>
                                </li>
								<li class="nav-item">
									<a class="nav-link" href="{{ base_url('logout') }}">Sair</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ base_url('login') }}">Login</a>
								</li>
							{% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div class="container-fluid p-4">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
	{# JS: Global do sistema #}
	{{ assets.globalJs() | raw }}

	{# JS: Específico do módulo (Dev/Prod) #}
	{{ assets.devModuleJs(module) | raw }}
	{{ assets.moduleJs(module) | raw }}

    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                    // Você pode querer salvar o estado no localStorage
                });
            }
        });
    </script>
    {% block scripts %}{% endblock %}
</body>
</html>
